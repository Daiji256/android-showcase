{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^gradle/spotless-init\\.gradle\\.kts$/"
      ],
      "matchStrings": [
        "// renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)\n\\s*val ([a-zA-Z0-9_]*)Version = \"(?<currentValue>.+?)\"\n"
      ]
    }
  ],
  "ignoreDeps": [
    "buildlogic.android.application",
    "buildlogic.android.library",
    "buildlogic.compose",
    "buildlogic.hilt",
    "buildlogic.robolectric",
    "buildlogic.roborazzi"
  ]
}
